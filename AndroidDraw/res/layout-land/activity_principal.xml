<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="color"
            android:background="@drawable/estilo_botones"
            android:src="@drawable/icono_color_pq" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="setPincel"
            android:background="@drawable/estilo_botones"
            android:src="@drawable/icono_pincel_pq" />

        <ImageButton
            android:id="@+id/ibCuadrado"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="taponCuadrado"
            android:src="@drawable/icono_cuadrado_pq" />

        <ImageButton
            android:id="@+id/ibBorrar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="borrar"
            android:background="@drawable/estilo_botones"
            android:src="@drawable/icono_borrar_pq" />

        <ImageButton
            android:id="@+id/ibGuardar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="guardar"
            android:background="@drawable/estilo_botones"
            android:src="@drawable/icono_guardar_pq" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lienzo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>
