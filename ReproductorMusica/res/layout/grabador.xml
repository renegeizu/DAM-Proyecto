<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Grabador" >
    
    <Button
        android:id="@+id/btGrabar"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btGrabar" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/microfono_desactivo" />

    <TextView
        android:id="@+id/tvGrabacion"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grabacion"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btDetener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btDetener" />

</LinearLayout>